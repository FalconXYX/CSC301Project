{
  "questions": [
    {
      "id": "specialty",
      "type": "radio",
      "prompt": "What kind of healthcare professional are you looking for?",
      "required": true,
      "options": [
        { "value": "family_doctor", "label": "Family Doctor" },
        { "value": "dentist", "label": "Dentist" },
        { "value": "physiotherapist", "label": "Physiotherapist" },
        { "value": "psychologist", "label": "Psychologist" },
        { "value": "chiropractor", "label": "Chiropractor" },
        { "value": "dermatologist", "label": "Dermatologist" }
      ]
    },
    {
      "id": "insurance",
      "type": "multi-select",
      "prompt": "Which insurance provider(s) do you have?",
      "required": true,
      "options": [
        { "value": "blue_cross", "label": "Blue Cross" },
        { "value": "manulife", "label": "Manulife" },
        { "value": "sunlife", "label": "Sun Life Financial" },
        { "value": "great_west", "label": "Great-West Life" },
        { "value": "canada_life", "label": "Canada Life" },
        { "value": "none", "label": "No insurance / Pay out of pocket" }
      ]
    },
    {
      "id": "location",
      "type": "text",
      "prompt": "What's your postal code?",
      "placeholder": "e.g., M5V 3A8",
      "required": true,
      "validation": {
        "pattern": "^[A-Z]\\d[A-Z] ?\\d[A-Z]\\d$",
        "message": "Please enter a valid Canadian postal code"
      }
    },
    {
      "id": "appointment_type",
      "type": "radio",
      "prompt": "What type of appointment do you prefer?",
      "required": true,
      "options": [
        { "value": "in_person", "label": "In-person visit" },
        { "value": "virtual", "label": "Virtual (video call)" },
        { "value": "either", "label": "Either is fine" }
      ]
    },
    {
      "id": "urgency",
      "type": "radio",
      "prompt": "How soon do you need an appointment?",
      "required": true,
      "options": [
        { "value": "asap", "label": "As soon as possible (within a week)" },
        { "value": "two_weeks", "label": "Within 2 weeks" },
        { "value": "month", "label": "Within a month" },
        { "value": "flexible", "label": "I'm flexible" }
      ]
    }
  ]
}
